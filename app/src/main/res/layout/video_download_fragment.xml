<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    tools:context=".ui.VideoDownloadFragment">

    <!--TextTitle-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtVidInfoHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="Video Details"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/progress_overlay" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtVidInfoTitle"
        style="@style/CustomTextBox"
        android:layout_width="0dp"
        android:text="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVidInfoHeader" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtVidInfoExtraOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:lines="4"
        android:maxLines="6"
        android:text="Description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVidInfoTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtVidInfoExtraTwo"
        style="@style/CustomTextBox"
        android:layout_width="0dp"
        android:text="address"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVidInfoExtraOne" />

    <VideoView
        android:id="@+id/imgVidThumbnail"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVidInfoExtraTwo" />

    <Button
        android:id="@+id/btnVidInfoDownload"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="8dp"
        android:text="Download"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgVidThumbnail" />
</androidx.constraintlayout.widget.ConstraintLayout>